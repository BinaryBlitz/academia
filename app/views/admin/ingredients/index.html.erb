<h1>Ингредиенты</h1>

<div class="form-group">
  <%= link_to 'Новый ингридиент', new_admin_ingredient_path, class: 'btn btn-default' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Изображение</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= image_tag ingredient.image_url %></td>
        <td>
          <%= link_to 'Изменить', edit_admin_ingredient_path(ingredient), class: 'btn btn-default' %>
          <%= link_to 'Удалить', [:admin, ingredient], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @ingredients %>
