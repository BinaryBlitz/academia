<%= form_for([:admin, @ingredient]) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this admin_ingredient from being saved:</h2>

      <ul>
      <% @ingredient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <% if @ingredient.image? %>
      <%= image_tag @ingredient.image_url, class: 'form-image' %>

      <div class="checkbox">
        <%= f.label :remove_image do %>
          <%= f.check_box :remove_image %> Удалить изображение
        <% end %>
      </div>
    <% else %>
      <%= f.file_field :image %>
    <% end %>
  </div>

  <div class="form-group actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
