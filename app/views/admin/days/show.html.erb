<h1><%= @day %></h1>

<div class="form-group">
  <%= link_to 'Изменить', edit_admin_day_path(@day), class: 'btn btn-default' %>
</div>

<h2>Блюда</h2>

<table class="table">
  <thead>
    <th>Блюдо</th>
    <th>Цена</th>
  </thead>
  <tbody>
    <% @day.schedules.all.each do |schedule| %>
      <tr>
        <td><%= schedule.dish.name %></td>
        <td><%= schedule.dish.price %> р.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Курьеры</h2>

<table class="table">
  <thead>
    <th>Имя</th>
    <th>Телефон</th>
    <th>Точка</th>
  </thead>
  <tbody>
    <% @day.couriers.each do |courier| %>
      <tr>
        <td><%= courier.name %></td>
        <td><%= courier.phone_number %></td>
        <td><%= courier.delivery_point %></td>
      </tr>
    <% end %>
  </tbody>
</table>
