<% cache [:admin, day] do %>
  <tr>
    <td><%= link_to day, [:admin, day] %></td>
    <td>
      <%= link_to 'Изменить', edit_admin_day_path(day), class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Удалить', [:admin, day], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger' %>
    </td>
  </tr>
<% end %>
