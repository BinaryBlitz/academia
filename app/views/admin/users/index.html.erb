<p id="notice"><%= notice %></p>

<h1>Пользователи</h1>

<table class="table">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Почта</th>
      <th>Телефон</th>
      <th>Баланс</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, [:admin, user] %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.balance %></td>
        <td>
          <%= link_to 'Изменить', edit_admin_user_path(user), class: 'btn btn-default' %>
          <%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
