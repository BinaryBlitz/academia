<h1>Listing Admin Orders</h1>

<%= link_to 'New Order', new_admin_order_path %>

<table class="table">
  <thead>
    <tr>
      <th>№</th>
      <th>Адрес</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.address %></td>
        <td><%= link_to 'Show', [:admin, order] %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
