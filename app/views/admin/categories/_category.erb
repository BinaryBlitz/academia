<% cache [:admin, category] do %>
  <tr>
    <td><%= category.id %></td>
    <td><%= link_to category.name, [:admin, category] %></td>
    <td><%= check_box_tag :stuff, 1, category.stuff  %></td>
    <td>
      <%= link_to 'Изменить', edit_admin_category_path(category), class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Удалить', [:admin, category], method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger' %>
    </td>
  </tr>
<% end %>
