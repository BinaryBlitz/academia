<%= form_for([:admin, @edge_point]) do |f| %>
  <% if @edge_point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@edge_point.errors.count, "error") %>:</h2>

      <ul>
      <% @edge_point.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :latitude %>
    <%= f.number_field :latitude, step: 0.000001, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :longitude %>
    <%= f.number_field :longitude, step: 0.000001, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
