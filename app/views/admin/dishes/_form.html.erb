<%= form_for([:admin, @dish]) do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "ошибка") %>:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :lunch %>
  <%= f.hidden_field :stuff %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle, class: 'form-control' %>
  </div>

  <% if @dish.main? %>
    <div class="form-group">
      <div class="checkbox">
        <%= f.label :hidden do %>
          <%= f.check_box :hidden %> Скрыть
        <% end %>
      </div>
    </div>

    <%= f.label :dish_ingredients %>

    <div class="form-group">
      <%= f.add_nested_fields_link :dish_ingredients, 'Добавить', class: 'btn btn-default' %>
    </div>

    <div class="form-group">
      <%= f.nested_fields_for :dish_ingredients do |ff| %>
        <div class="form-group dish-select">
          <%= ff.collection_select(:ingredient_id, Ingredient.all, :id, :name, {}, class: 'form-control') %>
          <%= ff.remove_nested_fields_link 'Удалить', class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @dish.main? || @dish.lunch? %>
    <%= f.label :dish_badges %>

    <div class="form-group">
      <%= f.add_nested_fields_link :dish_badges, 'Добавить', class: 'btn btn-default' %>
    </div>

    <div class="form-group">
      <%= f.nested_fields_for :dish_badges do |ff| %>
        <div class="form-group dish-select">
          <%= ff.collection_select(:badge_id, Badge.all, :id, :name, {}, class: 'form-control') %>
          <%= ff.remove_nested_fields_link 'Удалить', class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @dish.lunch? %>
    <%= f.label :lunch_dishes %>

    <div class="form-group">
      <%= f.add_nested_fields_link :lunch_dishes, 'Добавить', class: 'btn btn-default' %>
    </div>

    <div class="form-group">
      <%= f.nested_fields_for :lunch_dishes do |ff| %>
        <div class="form-group dish-select">
          <div class="form-group">
            <%= ff.label :name %>
            <%= ff.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= ff.label :weight %>
            <%= ff.number_field :weight, class: 'form-control' %>
          </div>

          <%= ff.remove_nested_fields_link 'Удалить', class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <h2>Табличка</h2>

  <div class="form-group">
    <%= f.label :proteins %>
    <%= f.number_field :proteins, class: 'form-control', step: 0.1 %>
  </div>

  <div class="form-group">
    <%= f.label :fats %>
    <%= f.number_field :fats, class: 'form-control', step: 0.1 %>
  </div>

  <div class="form-group">
    <%= f.label :carbohydrates %>
    <%= f.number_field :carbohydrates, class: 'form-control', step: 0.1 %>
  </div>

  <div class="form-group">
    <%= f.label :calories %>
    <%= f.number_field :calories, class: 'form-control', step: 0.1 %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <% if @dish.image? %>
      <%= image_tag @dish.image_url, class: 'form-image' %>

      <div class="checkbox">
        <%= f.label :remove_image do %>
          <%= f.check_box :remove_image %> Удалить изображение
        <% end %>
      </div>
    <% else %>
      <%= f.file_field :image %>
    <% end %>
  </div>

  <div class="form-group actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
