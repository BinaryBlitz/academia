<h1>Блюда</h1>

<div class="form-group">
  <%= link_to 'Новое блюдо', new_admin_dish_path, class: 'btn btn-default' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Изображение</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= link_to dish.name, [:admin, dish] %></td>
        <td><%= dish.description %></td>
        <td><%= dish.image %></td>
        <td><%= link_to 'Изменить', edit_admin_dish_path(dish) %></td>
        <td><%= link_to 'Удалить', [:admin, dish], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
