<table class="table">
  <thead>
    <tr>
      <th>№</th>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Изображение</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.id %></td>
        <td><%= link_to dish.name, [:admin, dish] %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %> ₽</td>
        <td><%= dish.image.present? ? 'Да' : 'Нет' %></td>
        <td>
          <%= link_to 'Изменить',
                      edit_admin_dish_path(dish),
                      class: 'btn btn-sm btn-primary' %>
        </td>
        <td>
          <%= link_to 'Удалить',
                      [:admin, dish], method: :delete,
                      data: { confirm: 'Вы уверены?' },
                      class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @dishes %>
