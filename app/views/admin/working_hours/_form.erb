<%= form_for([:admin, @working_hour]) do |f| %>
  <% if @working_hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@working_hour.errors.count, "ошибка") %>:</h2>

      <ul>
      <% @working_hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.number_field :starts_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :ends_at %>
    <%= f.number_field :ends_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
